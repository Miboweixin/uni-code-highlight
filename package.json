{
  "name": "uni-code-highlight-xthk",
  "displayName": "uni-code-highlight-xthk",
  "description": "vscode uni-app高亮代码块",
  "publisher": "wei-xin-1205",
  "version": "1.0.4",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Miboweixin/uni-code-highlight"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/index.js",
  "icon": "icon.png",
  "scripts": {
    "build": "tsup src/index.ts --external vscode",
    "dev": "nr build --watch",
    "publish:vscode": "vsce package --no-dependencies && vsce publish --no-dependencies",
    "publish:openvsx": "ovsx publish",
    "vscode:prepublish": "pnpm run compile",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "contributes": {
    "commands": [
      {
        "command": "uni.comment.reload",
        "title": "Uni Helper: 重新加载条件编译高亮"
      },
      {
        "command": "uni.comment.fold-other-platform",
        "title": "Uni Helper: 选择平台并折叠其他平台注释",
        "icon": "$(list-tree)"
      }
    ],
    "configuration": {
      "title": "uni-code-highlight-xthk",
      "properties": {
        "uni-code-highlight-xthk.platform": {
          "type": "object",
          "default": {},
          "description": "自定义平台高亮"
        },
        "uni-code-highlight-xthk.prefix": {
          "type": "string",
          "default": "",
          "description": "自定义#if注释颜色"
        }
      }
    },
    "menus": {
      "editor/title": [
        {
          "command": "uni.comment.fold-other-platform",
          "group": "navigation@0",
          "when": "uni.hasComment"
        }
      ]
    }
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.1.2",
    "@antfu/ni": "^0.21.2",
    "@antfu/utils": "^0.7.6",
    "@vscode/vsce": "^2.19.0",
    "bumpp": "^9.1.0",
    "concurrently": "^8.0.1",
    "fastest-levenshtein": "^1.0.16",
    "ovsx": "^0.8.0",
    "pnpm": "^8.1.1",
    "tsup": "^6.7.0",
    "vite": "^4.2.1",
    "vitest": "^0.29.8",
    "@types/vscode": "^1.87.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9"
  }
}